<!DOCTYPE html>
<html>

<head>
    <title>
        <%= Title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/cart.css' />
    <link rel='stylesheet' href='/stylesheets/mainpage.css' />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
    <div id="main">
        <div class="container">

            <%- include('partials/login-header') %>

                <%- include('partials/header') %>

        </div>
    </div>

    <div id="content">
        <div id="topic">
            <p id="topic-name">ตะกร้าสินค้า</p>
        </div>

        <table>
            <thead>
                <tr>
                    <th>รูปภาพ</th>
                    <th>ชื่อสินค้า</th>
                    <th>ราคาต่อหน่วย</th>
                    <th>จำนวน</th>
                    <th>ราคารวม</th>
                    <th>จัดการ</th>
                </tr>
            </thead>
            <tbody>
                <% CartItems.forEach(function(item, index) { %>
                    <tr>
                        <td><img src="<%= item.Image %>" alt="<%= item.ProductName %>" height="50" width="50"></td>
                        <td>
                            <%= item.ProductName %>
                        </td>
                        <td>฿<%= item.Price %>
                        </td>
                        <td>
                            <button class="btn"
                                onclick="changeQuantity(-1, '<%= index %>', '<%= item.Price %>')">-</button>
                            <span id="qty<%= index %>">
                                <%= item.Quantity %>
                            </span>
                            <button class="btn"
                                onclick="changeQuantity(1, '<%= index %>', '<%= item.Price %>')">+</button>
                        </td>
                        <td id="total<%= index %>">฿<%= item.Price * item.Quantity %>
                        </td>
                        <td><button class="btn btn-danger"
                                onclick="removeItem(this, '<%= item.ProductID %>')">ลบ</button>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>

        </table>

        <div id="submit">
            <a class="btn btn-secondary" href="/category" style="color: white">ซื้อสินค้าต่อ</a>
            &nbsp;&nbsp;&nbsp;
            <a class="btn btn-warning" href="/checkout" style="color: rgb(0, 0, 0)">ชำระเงิน</a>
        </div>

    </div>


    <%- include('partials/footer') %>

        </div>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

    function changeQuantity(amount, index, price) {
        var quantityElem = document.getElementById('qty' + index);
        var currentQuantity = parseInt(quantityElem.textContent);
        var newQuantity = currentQuantity + amount;

        if (newQuantity >= 1) { // ตรวจสอบให้แน่ใจว่า quantity ไม่ต่ำกว่า 1
            quantityElem.textContent = newQuantity;

            var totalElem = document.getElementById('total' + index);
            var newTotal = newQuantity * parseFloat(price); // คำนวณราคาสินค้าใหม่
            totalElem.textContent = '฿' + newTotal.toFixed(2); // แสดงผลเป็นทศนิยม 2 ตำแหน่ง
        }
    }


    function removeItem(button, productID) {
        var AccountID = "<%= AccountID %>";
            var row = button.closest('tr'); // ใช้ closest() เพื่อหาตารางแถวที่ถูกต้อง

            $.ajax({
                url: '/cart/remove',
                method: 'POST',
                data: {
                    AccountID: AccountID,
                    ProductID: productID
                },
                success: function (response) {
                    alert(response);
                    row.remove(); // ลบแถวจาก DOM หลังจากได้รับการตอบกลับที่สำเร็จ
                },
                error: function (error) {
                    alert('เกิดข้อผิดพลาดในการลบสินค้าsss');
                    console.log("Error:", error); // แสดงข้อมูลข้อผิดพลาด
                }
            });
        }
</script>

</html>