<!DOCTYPE html>
<html>

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>
		<%=title%>
	</title>
	<link rel='stylesheet' href='/stylesheets/cart.css' />
	<link rel='stylesheet' href='/stylesheets/admin.css' />
	<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
		integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>

	<%- include('partials/topbar') %>

		<%- include('partials/sidebar') %>

			<div class="content">
				<br>
				<table>
					<thead>
						<tr>
							<th><button class="<%= (Status == 'Payment Checking') ? 'btn-dark' : 'btn-light' %>"
									id="Payment Checking" onclick="orderByStatus(id)">ตรวจสลิป</button></th>
							<th><button
									class="<%= (Status == 'Payment Complete, Wait for Shipping') ? 'btn-dark' : 'btn-light' %>"
									id="Payment Complete, Wait for Shipping" onclick="orderByStatus(id)">รอส่ง</button>
							</th>
							<th><button class="<%= (Status == 'Shipping') ? 'btn-dark' : 'btn-light' %>" id="Shipping"
									onclick="orderByStatus(id)">กำลังส่ง</button>
							</th>
							<th><button class="<%= (Status == 'Shipped') ? 'btn-dark' : 'btn-light' %>" id="Shipped"
									onclick="orderByStatus(id)">ส่งเสร็จ</button>
							</th>
							<th><button class="<%= (Status == 'all') ? 'btn-dark' : 'btn-light' %>" id="all"
									onclick="orderByStatus(id)">ทั้งหมด</button></th>
						</tr>
					</thead>
				</table>
				<table>
					<thead>
						<tr>
							<th>No.</th>
							<th>OrderID</th>
							<th>Customer</th>
							<th>OrderDate</th>
							<th>ShipperID</th>
							<th>OrderStatus</th>
							<th>จัดการ</th>
						</tr>
					</thead>
					<tbody>
						<% Orders.forEach(function(item, index) { %>
							<tr>
								<td>
									<%= index+1 %>
								</td>
								<td>
									<%= item.OrderID %>
								</td>
								<td>
									<%= item.AccountName %>
								</td>
								<td>
									<%= new Date(item.OrderDate).toLocaleString('th-TH', { day: 'numeric' ,
										month: 'long' , year: 'numeric' , hour: 'numeric' , minute: 'numeric' }) %>
								</td>

								<td>
									<%= (item.ShipperID===null) ? '-' :'item.ShipperID' %>
								</td>
								<td>
									<%= item.OrderStatus %>
								</td>
								<td><button class="btn btn-warning"
										onclick="viewOrderDetail('<%=item.OrderID%>')">ดู</button>
								</td>
							</tr>
							<% }) %>
					</tbody>
				</table>
			</div>

</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

	function orderByStatus(status) {
		$.ajax({
			url: '/order_all/status?status=' + encodeURIComponent(status),  // ส่ง status ผ่าน query string
			method: 'GET',  // ใช้ GET method
			success: function (response) {
				// แทนที่จะ console.log() ให้เปลี่ยนหน้าไปยังเส้นทางที่ต้องการ
				window.location.href = '/order_all/status?status=' + encodeURIComponent(status);
			},
			error: function (error) {
				alert('เกิดข้อผิดพลาดในการ order by status');
				console.log("Error:", error); // Log the error for debugging
			}
		});
	}


	function viewOrderDetail(orderID) {
		$.ajax({
			url: '/order_all/getOrderByOrderID',
			method: 'GET',
			data: {
				OrderID: orderID
			},
			success: function (response) {

				// แปลงข้อมูลเป็น JSON และ encode เพื่อส่งใน query string
				const orderData = encodeURIComponent(JSON.stringify(response.Order[0]));
				const orderDetailsData = encodeURIComponent(JSON.stringify(response.OrderDetails));


				// เปลี่ยนหน้าโดยส่งข้อมูลผ่าน query string ที่ถูก encode แล้ว
				window.location.href = `/order_all/orderByOrderID?Order=${orderData}&OrderDetails=${orderDetailsData}`;
			},
			error: function (error) {
				alert('เกิดข้อผิดพลาดในการดึงข้อมูล getOrderByOrderID');
				console.log("Error:", error); // Log ข้อผิดพลาดเพื่อการ debug
			}
		});
	}

	// Function to display alerts based on query parameters
	function displayAlert() {
		const urlParams = new URLSearchParams(window.location.search);
		const loginStatus = urlParams.get('login');

		if (loginStatus === 'success') {
			alert('Login Success as Admin!');
		}
	}

	// Call the function to display the alert when the page loads
	window.onload = displayAlert;
</script>

</html>