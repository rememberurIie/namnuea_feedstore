<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/mainpage.css' />
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
  <div id="main">
    <div class="container">

      <%- include('partials/login-header') %>

        <%- include('partials/header') %>

    </div>
  </div>

  <div id="content" style="padding-bottom: 250px" class="row">
    <div class="col-lg-12">
      <div id="img-slides" class="w3-content w3-display-container">
        <img src="https://www.phfl.com/wp-content/uploads/2019/05/Rotating-Banner_HomeLoan-1366x480-01.jpg"
          class="img-fluid" alt="Responsive image">
        <img src="https://www.phfl.com/wp-content/uploads/2020/09/rotating-banner-lap-new.jpg" class="img-fluid"
          alt="Responsive image">
        <img src="https://www.phfl.com/wp-content/uploads/2019/03/rotating-banner-generic-phfl.jpg" class="img-fluid"
          alt="Responsive image">

        <div class="w3-center w3-container w3-section w3-large w3-text-white w3-display-bottommiddle"
          style="width: 20%;">
          <div class="w3-left w3-hover-text-khaki" style="margin-top: -2px;" onclick="plusDivs(-1)">&#10094;</div>
          <div class="w3-right w3-hover-text-khaki" style="margin-top: -2px;" onclick="plusDivs(1)">&#10095;</div>
          <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(1)"></span>
          <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(2)"></span>
          <span class="w3-badge demo w3-border w3-transparent w3-hover-white" onclick="currentDiv(3)"></span>
        </div>

      </div>
    </div>
  </div>


  <%- include('partials/footer') %>


  </div>
</body>
<script>
   var slideIndex = 1;
   showDivs(slideIndex);

   function plusDivs(n) {
      showDivs(slideIndex += n);
   }

   function currentDiv(n) {
     showDivs(slideIndex = n);
   }

   function showDivs(n) {
      var i;
      var x = document.getElementsByClassName("img-fluid");
      var dots = document.getElementsByClassName("demo");
      if (n > x.length) { slideIndex = 1 }
      if (n < 1) { slideIndex = x.length }
      for (i = 0; i < x.length; i++) {
         x[i].style.display = "none";
      }
      for (i = 0; i < dots.length; i++) {
         dots[i].className = dots[i].className.replace(" w3-white", "");
      }
      x[slideIndex - 1].style.display = "block";
      dots[slideIndex - 1].className += " w3-white";
  }

  // Function to display alerts based on query parameters
   function displayAlert() {
      const urlParams = new URLSearchParams(window.location.search);
      const loginStatus = urlParams.get('login');
      const registerStatus = urlParams.get('register');

      if (loginStatus === 'success') {
            alert('Login Success!'); //alert login 
      } else if (registerStatus === 'success'){
         alert('Register Success!'); //alert register
      }
   }

   // Call the function to display the alert when the page loads
   window.onload = displayAlert;

</script>

</html>